
<div class="flex flex-col items-center w-4/5 md:w-1/2 transition-all ease-in"> 
  <div class="flex flex-row mt-10 w-full justify-center items-end">
    <h2 class="font-bold sm:text-8xl text-6xl font-righteous">Sign Up</h2>
  </div>
 
    <%= form_with model: @user, url: sign_up_path, class:"form" do |f| %>
      <% render "shared/form_errors", f: f %>
      <div class="mt-2">
        <%= f.email_field :email, autofocus: true, placeholder: "e-mail", class:"rounded-lg font-righteous text-lg mt-10" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :username, autofocus: true, placeholder: "username", class:"rounded-lg font-righteous text-lg mb-4" %>
      </div>
      <div class="mt-2">
        <%= f.password_field :password, placeholder: "new-password", class:"rounded-lg font-righteous text-lg" %>
      </div>
      <div class="mt-2">
        <%= f.password_field :password_confirmation, placeholder: "repeat-password", class:"rounded-lg font-righteous text-lg" %><br />
      </div>
      <div class="actions btn-green mt-4">
        <%= f.submit %>
      </div>
    <% end %>
</div>