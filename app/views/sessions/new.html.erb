<div class="flex flex-col items-center w-4/5 md:w-1/2 transition-all ease-in"> 
  <div class="flex flex-row mt-10 w-full justify-center items-end">
    <h2 class="text-white font-bold sm:text-8xl text-6xl font-righteous">Sign In</h2>
  </div>

  <%= form_with url: sign_in_path, class:"form" do |f| %>
      <div class="mt-2">
        <%= f.email_field :email, autofocus: true, placeholder: "e-mail", class:"rounded-lg font-righteous text-lg mt-10" %>
      </div>

      <div class="mt-2">
        <%= f.password_field :password, placeholder: "password", class:"rounded-lg font-righteous text-lg" %>
      </div>
      <div class="actions btn-blue mt-1 text-xs">
        <%= link_to "Forgot your password?", password_reset_path, method: :get  %>
      </div>
        

      <div class="actions btn-green mt-8 text-xl">
        <%= f.submit "Go" %>
      </div>
    <% end %>

</div>